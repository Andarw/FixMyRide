<resources>
    <!-- Define Spinner Item Text Appearance -->
    <style name="SpinnerTextAppearance" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#FFFFFF</item> <!-- White text -->
        <item name="android:background">#191C1E</item> <!-- Optional background -->
    </style>

    <style name="HeaderTextStyle">
        <item name="android:textColor">@color/button_color</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="HeaderTextStyle3">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="HeaderButtonStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">#191C1E</item>
    </style>

    <style name="FooterButtonStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="FooterButtonStyleYes">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">@color/yes</item>
    </style>

    <style name="FooterButtonStyleNo">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">@color/error_color</item>
    </style>

    <style name="HeaderTextStyle2">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/button_color</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LabelTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:popupBackground">@color/button_color</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="InputTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="NoteTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/button_color</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="PrimaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="backgroundTint">@color/button_color</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="SecondaryButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/button_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="strokeColor">@color/error_color</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="DropdownStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/button_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/button_color</item>
        <item name="android:textColorHint">@color/button_color</item>
        <item name="endIconTint">@color/button_color</item>
    </style>
</resources>
